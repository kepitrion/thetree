<link rel="stylesheet" href="/css/views/simpleForm.css">
<%-include('../components/alert')%>
<form method="post">
    <div>
        <label for="usernameInput">Username</label>
        <input style="width: 250px;" id="usernameInput" name="username" required autofocus>
    </div>
    <%if(req.permissions.includes('login_history_hidelog')) {%>
        <div style="margin-top: 15px;">
            <label>
                hidelog:
                <input type="checkbox" name="hidelog" value="Y">
            </label>
        </div>
    <%}%>

    <div class="button-block">
        <button class="thetree-square-button thetree-blue-button">확인</button>
    </div>
</form>