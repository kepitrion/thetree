<form method="post">
    <div class="form-block">
        <label for="pinInput">PIN</label>
        <input type="text" id="pinInput" name="pin" maxlength="6">
    </div>
    <div class="button-block">
        <button class="thetree-square-button thetree-blue-button">활성화</button>
    </div>
</form>