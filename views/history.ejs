<style>
    @import "/css/views/history.css";
</style>

<%
const enablePrev = revs[0].uuid !== latestRev.uuid;
const enableNext = revs[revs.length - 1].rev > 1;

const enabledButton = (query, content) => `<a href="${doc_action_link(document, 'history', query)}" role="button" class="navigation-button navigation-page-button">${content}</a>`;
const disabledButton = content => `<span role="button" class="navigation-button navigation-button-disabled navigation-page-button">${content}</span>`;

const prevButtonContent = `
<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 320 512"><path d="M9.4 233.4c-12.5 12.5-12.5 32.8 0 45.3l192 192c12.5 12.5 32.8 12.5 45.3 0s12.5-32.8 0-45.3L77.3 256 246.6 86.6c12.5-12.5 12.5-32.8 0-45.3s-32.8-12.5-45.3 0l-192 192z"></path></svg>
<span>이전</span>
`.trim();
const nextButtonContent = `
<span>다음</span>
<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 320 512"><path d="M310.6 233.4c12.5 12.5 12.5 32.8 0 45.3l-192 192c-12.5 12.5-32.8 12.5-45.3 0s-12.5-32.8 0-45.3L242.7 256 73.4 86.6c-12.5-12.5-12.5-32.8 0-45.3s32.8-12.5 45.3 0l192 192z"></path></svg>
`;

const navigationPage = `
${enablePrev ? enabledButton({
    until: revs[0].rev + 1
}, prevButtonContent) : disabledButton(prevButtonContent)}
${enableNext ? enabledButton({
    from: revs[revs.length - 1].rev - 1
}, nextButtonContent) : disabledButton(nextButtonContent)}
`.trim();
%>

<div class="history-style">
<div class="navigation-group">
    <div class="navigation-div navigation-page navigation-page-top"><%-navigationPage%></div>

    <form id="navigation-rev-form">
        <div class="navigation-div navigation-rev">
            <input class="navigation-rev-input" type="number" name="from" required>
            <span class="navigation-rev-placeholder">r</span>
            <button class="navigation-button">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512"><path d="M307 34.8c-11.5 5.1-19 16.6-19 29.2l0 64-112 0C78.8 128 0 206.8 0 304C0 417.3 81.5 467.9 100.2 478.1c2.5 1.4 5.3 1.9 8.1 1.9c10.9 0 19.7-8.9 19.7-19.7c0-7.5-4.3-14.4-9.8-19.5C108.8 431.9 96 414.4 96 384c0-53 43-96 96-96l96 0 0 64c0 12.6 7.4 24.1 19 29.2s25 3 34.4-5.4l160-144c6.7-6.1 10.6-14.7 10.6-23.8s-3.8-17.7-10.6-23.8l-160-144c-9.4-8.5-22.9-10.6-34.4-5.4z"></path></svg>
            </button>
        </div>
    </form>
</div>

<form id="rev-compare-form" action="<%=doc_action_link(document, 'diff')%>">
    <p>
        <button class="navigation-button">선택 리비전 비교</button>
    </p>

    <ul>
        <%for(let rev of revs) {%>
            <%rev = utils.addHistoryData(rev);%>

            <li>
                <span><%-getFullDateTag(rev.createdAt)%></span>
                <span class="history-action">
                    <%const actions = [
                        ...(rev.troll ? [] : [{
                            action: 'w',
                            text: '보기',
                            follow: true
                        }]),
                        {
                            action: 'raw',
                            text: 'RAW'
                        },
                        {
                            action: 'blame',
                            text: 'Blame'
                        },
                        ...(rev.troll ? [] : [{
                            action: 'revert',
                            text: '이 리비전으로 되돌리기'
                        }]),
                        {
                            action: 'diff',
                            text: '비교'
                        }
                    ];

                    if(req.permissions.includes('mark_troll_revision')) {
                        if(rev.troll) actions.push({
                            action: 'a/unmark_troll',
                            text: '[A]반달표시 해제'
                        });
                        else actions.push({
                            action: 'a/mark_troll',
                            text: '[A]반달로 표시'
                        });
                    }

                    if(rev.log && req.permissions.includes('hide_document_history_log')) {
                        if(rev.hideLog) actions.push({
                            action: 'a/unhide_log',
                            text: '[A]편집요약 숨기기 해제'
                        });
                        else actions.push({
                            action: 'a/hide_log',
                            text: '[A]편집요약 숨기기'
                        });
                    }

                    if(req.permissions.includes('hide_revision')) {
                        if(rev.hidden) actions.push({
                            action: 'a/unhide',
                            text: '[A]리비전 숨기기 해제'
                        });
                        else actions.push({
                            action: 'a/hide',
                            text: '[A]리비전 숨기기'
                        });
                    }
                    %>

                    (<%-actions.map(a => `<a href="${doc_action_link(document, a.action, { uuid: rev.uuid })}"${a.follow ? '' : ' rel="nofollow"'}>${a.text}</a>`).join(' | ')%>)

                </span>

                <span>
                    <input type="radio" name="olduuid" value="<%=rev.uuid%>"><input type="radio" name="uuid" value="<%=rev.uuid%>">

                </span>

                <%if(rev.infoText) {%><i>(<%-rev.infoText%>)</i><%}%>

                <strong>
                    <a class="rev-text" href="#">r<%=rev.rev%></a>

                </strong>

                <%-rev.diffHtml%>

                <%-rev.userHtml%>

                <%if(rev.log) {%>
                    (<span class="history-log"><%=rev.log%></span>)
                <%}%>
            </li>
        <%}%>
    </ul>

    <div class="navigation-div navigation-page"><%-navigationPage%></div>
</form>
</div>